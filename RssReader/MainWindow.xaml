<Window x:Class="RssReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RssReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="595">
    <Grid Height="440" VerticalAlignment="Center" HorizontalAlignment="Center" Width="590">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="1" Width="100" Height="30" Margin="10,10,10,106" Content="Przycisk1" Click="Search"/>
        <TextBox Name="Link" Text="Enter link here!" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left" MinWidth="350" TextWrapping="Wrap" AcceptsReturn="True"/>
        <ListBox Name="LinkList" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding}">
        </ListBox>
        <Button Grid.Column="2" Grid.Row="1" Width="100" Height="30" Content="Zapisz link" Click="SaveLinkToFile"/>
    </Grid>
</Window>
