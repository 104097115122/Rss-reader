<Window x:Class="RssReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RssReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="595">
    <Grid Height="434" VerticalAlignment="Center" HorizontalAlignment="Center" Width="595">
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Content" HorizontalAlignment="Left" Margin="128,73,0,0" TextWrapping="Wrap" TextAlignment="Center" Text="A title will appear here" VerticalAlignment="Top" Height="50" Width="347" Grid.Row="1"/>
        <TextBox x:Name="AddLink" HorizontalAlignment="Left" Margin="68,56,0,0" TextWrapping="Wrap" Text="Enter a link here" VerticalAlignment="Top" Width="120" TextChanged="AddLink_TextChanged"/>
        <Button x:Name="AddLink1" Content="Refresh" HorizontalAlignment="Left" Margin="68,84,0,0" VerticalAlignment="Top" Click="AddLink1_Click" Height="36" Width="120"/>
        <Label Content="Title of searached feed" HorizontalAlignment="Center" Margin="0,31,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="-1.209,0.383"/>
        <ComboBox x:Name="ListOfPreviouslySearched" HorizontalAlignment="Left" Margin="336,54,0,0" VerticalAlignment="Top" Width="176" SelectionChanged="ComboBox_SelectionChanged"/>
        <Label Content="List of previously searched links" HorizontalAlignment="Left" Margin="336,23,0,0" VerticalAlignment="Top"/>
        <Label Content="Enter a link below" Margin="68,23,407,119"/>

    </Grid>
</Window>
